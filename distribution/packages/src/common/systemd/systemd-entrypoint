#!/bin/sh

# This wrapper script allows SystemD to feed a file containing a passphrase into
# the main Renameme startup script

if [ -n "$ES_KEYSTORE_PASSPHRASE_FILE" ] ; then
  exec /usr/share/renameme/bin/renameme "$@" < "$ES_KEYSTORE_PASSPHRASE_FILE"
else
  exec /usr/share/renameme/bin/renameme "$@"
fi
