#!/bin/bash
#
# This script is executed in the pre-installation phase
#
#   On Debian,
#       $1=install : indicates an new install
#       $1=upgrade : indicates an upgrade
#
#   On RedHat,
#       $1=1       : indicates an new install
#       $1=2       : indicates an upgrade

err_exit() {
    echo "$@" >&2
    exit 1
}

# source the default env file
if [ -f "${path.env}" ]; then
    . "${path.env}"
fi

export ES_PATH_CONF=${ES_PATH_CONF:-${path.conf}}

case "$1" in

    # Debian ####################################################
    install|upgrade)

        # Create renameme group if not existing
        if ! getent group renameme > /dev/null 2>&1 ; then
            echo -n "Creating renameme group..."
            addgroup --quiet --system renameme
            echo " OK"
        fi

        # Create renameme user if not existing
        if ! id renameme > /dev/null 2>&1 ; then
            echo -n "Creating renameme user..."
            adduser --quiet \
                    --system \
                    --no-create-home \
                    --home /nonexistent \
                    --ingroup renameme \
                    --disabled-password \
                    --shell /bin/false \
                    renameme
            echo " OK"
        fi
    ;;
    abort-deconfigure|abort-upgrade|abort-remove)
    ;;

    # RedHat ####################################################
    1|2)

        # Create renameme group if not existing
        if ! getent group renameme > /dev/null 2>&1 ; then
            echo -n "Creating renameme group..."
            groupadd -r renameme
            echo " OK"
        fi

        # Create renameme user if not existing
        if ! id renameme > /dev/null 2>&1 ; then
            echo -n "Creating renameme user..."
            useradd --system \
                    --no-create-home \
                    --home-dir /nonexistent \
                    --gid renameme \
                    --shell /sbin/nologin \
                    --comment "renameme user" \
                    renameme
            echo " OK"
        fi
    ;;

    *)
        err_exit "pre install script called with unknown argument \`$1'"
    ;;
esac

${scripts.footer}
