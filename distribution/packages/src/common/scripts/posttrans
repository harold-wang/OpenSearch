# source the default env file
if [ -f "${path.env}" ]; then
    . "${path.env}"
fi

export ES_PATH_CONF=${ES_PATH_CONF:-${path.conf}}

if [ ! -f "${ES_PATH_CONF}"/renameme.keystore ]; then
    /usr/share/renameme/bin/renameme-keystore create
    chown root:renameme "${ES_PATH_CONF}"/renameme.keystore
    chmod 660 "${ES_PATH_CONF}"/renameme.keystore
    md5sum "${ES_PATH_CONF}"/renameme.keystore > "${ES_PATH_CONF}"/.renameme.keystore.initial_md5sum
else
    if /usr/share/renameme/bin/renameme-keystore has-passwd --silent ; then
      echo "### Warning: unable to upgrade encrypted keystore" 1>&2
      echo " Please run renameme-keystore upgrade and enter password" 1>&2
    else
      /usr/share/renameme/bin/renameme-keystore upgrade
    fi
fi

${scripts.footer}
